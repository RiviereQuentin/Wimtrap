buildTFBSmodel_custom <- function(organism = NULL,
                                  ChIPpeaks,
                                  genome_sequence = "getGenome",
                                  pfm = NULL,
                                  tss = "biomart",
                                  tts = "biomart",
                                  promoter = "biomart",
                                  x5utr = "biomart",
                                  cds = "biomart",
                                  intron = "biomart",
                                  x3utr = "biomart",
                                  downstream = "biomart",
                                  dhs = NULL,
                                  groupTFbyDHS = data.frame(TFNames = c(), DHS = c()),
                                  conserved_elements = NULL,
                                  otherFeatures = NULL,
                                  matches = NULL,
                                  smoothing_window = NULL,
                                  default_value_when_missing = 0,
                                  promoterLength = 2000,
                                  downstreamLength = 1000,
                                  proximalLength = 300,
                                  proportionTF_Validation = 0,
                                  strandAsFeature = FALSE,
                                  pvalThreshold = 0.001,
                                  TFspecific = FALSE,
                                  TF4Validation,
                                  targetsROC = FALSE){
  sourceData <- inputData()
  DataSet <- getCandidatesRegions(sourceData$matches,
                                  sourceData$pwm,
                                  sourceData$dhs,
                                  sourceData$structures,
                                  sourceData$features,
                                  sourceData$genome,
                                  TFNames = names(sourceData$ChIP),
                                  groupTFbyDHS,
                                  pvalThreshold,
                                  modeling = TRUE,
                                  promoterLength,
                                  downstreamLength,
                                  sourceData$ChIP)
  Model <- xgbmodeling(DataSet,
                       TFspecific,
                       TF4Validation)

}

